<div class="flex items-center justify-between">
  <h1 class="font-bold text-3xl text-cyan-900">Create new Feature</h1>

  <%= link_to "Back", features_path, class:"p-3 rounded border border-cyan-900 w-[150px] text-center hover:bg-cyan-900/80 hover:text-white" %>
</div>

<%= form_with url: features_path do |form| %>
  <div class="flex flex-col gap-1 mt-4">
    <%= form.text_field :flag, placeholder:"Flag", class:"rounded" %>
    <%= form.submit "Create", class:"p-3 rounded border bg-cyan-900	text-white w-[150px] text-center hover:bg-cyan-800 cursor-pointer mt-4" %>
  </div>
<% end %>
